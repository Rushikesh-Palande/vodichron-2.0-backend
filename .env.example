# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=5000
HOST=localhost

# =================================
# SECURITY CONFIGURATION
# =================================
SESSION_SECRET=your_session_secret_min_32_characters_long_here

# Backup Encryption Password (for database backup encryption)
# Must contain: uppercase, lowercase, number, and special character
# Generate a strong password: openssl rand -base64 32
BACKUP_ENCRYPTION_PASSWORD=YourSecure@Backup2024!Password#

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vodichron
DB_USER=root
DB_PASSWORD=your_password_here
DB_TIMEZONE=+05:30
SQL_LOGGING=false

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=http://localhost:3000

# =================================
# FILE UPLOAD / ASSET CONFIGURATION
# =================================
# Path where uploaded files (documents, photos) will be stored
ASSET_PATH=./assets

# Enable/disable file uploads (set to false to block uploads during maintenance)
ASSET_ALLOW_UPLOAD=true
