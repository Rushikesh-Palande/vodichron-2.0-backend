# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=5100
HOST=localhost

# =================================
# SECURITY CONFIGURATION
# =================================
# Session secret for signing cookies (min 32 characters)
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_session_secret_min_32_characters_long_here

# =================================
# JWT CONFIGURATION
# =================================
# Access token expiry time (e.g., 30m, 1h, 24h)
JWT_ACCESS_TOKEN_EXPIRES_IN=1h

# Refresh token max age in milliseconds (default 7 days = 604800000)
JWT_REFRESH_TOKEN_MAX_AGE_MS=604800000

# =================================
# DATABASE CONFIGURATION
# =================================
# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vodichron
DB_USER=root
DB_PASSWORD=root
DB_TIMEZONE=+05:30

# SQL query logging (set to true to debug queries in console)
SQL_LOGGING=false

# Database Connection Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =================================
# CORS CONFIGURATION
# =================================
# Allowed origins for CORS (comma-separated)
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://192.168.1.46:3000,http://192.168.1.45:3000,http://192.168.1.60:5173

# Frontend URL (for password reset emails, redirect links, etc.)
FRONTEND_URL=http://localhost:5173

# =================================
# EMAIL CONFIGURATION
# =================================
# SMTP Server Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Gmail Credentials
# For Gmail: Use App Password (NOT your regular password)
# Generate from: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email Sender Information
EMAIL_FROM_NAME=Vodichron HRMS
EMAIL_FROM_ADDRESS=noreply@vodichron.com

# =================================
# FILE UPLOAD / ASSET CONFIGURATION
# =================================
# Path where uploaded files (documents, photos) will be stored
ASSET_PATH=./assets

# Enable/disable file uploads (set to false to block uploads during maintenance)
ASSET_ALLOW_UPLOAD=true

# =================================
# BACKUP CONFIGURATION
# =================================
# Encryption password for database backups
BACKUP_ENCRYPTION_PASSWORD=YourSecureBackupPassword@2024#
