{
  "name": "vodichron-hrms-backend",
  "version": "1.0.0",
  "description": "HRMS Backend System",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=4096 dist/server.js",
    "start:cluster": "NODE_ENV=production pm2 start pm2.config.js",
    "seed": "node dist/scripts/run-seeds.js",
    "check:seed": "node dist/scripts/check-seed.js",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "deploy": "sh scripts/deploy.sh",
    "deploy:prod": "sh scripts/deployProd.sh"
  },
  "keywords": [
    "HRMS",
    "Backend",
    "TypeScript",
    "Express"
  ],
  "author": "RISHII",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@trpc/server": "^11.7.0",
    "@types/multer": "^2.0.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysqldump": "^3.2.0",
    "mysql2": "^3.9.8",
    "nodemailer": "^7.0.10",
    "sequelize": "^6.37.7",
    "superjson": "^1.13.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "^7.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
